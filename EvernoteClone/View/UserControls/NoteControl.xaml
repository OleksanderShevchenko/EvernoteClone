<UserControl x:Class="EvernoteClone.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EvernoteClone.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="titleTextBlock"
                Text="{Binding Title}"
                FontSize="15"
                FontWeight="Bold"/>
            <TextBlock x:Name="editedTextBlock"
                Text="{Binding UpdatedTime}"
                FontSize="12"
                Margin="0 10 0 0"
                Foreground="DodgerBlue"/>
            <TextBlock x:Name="contentTextBlock"
                Text="{Binding Title}"
                FontSize="12"
                Foreground="DarkGray"
                TextWrapping="Wrap"/>
        </StackPanel> 
    </Grid>
</UserControl>
