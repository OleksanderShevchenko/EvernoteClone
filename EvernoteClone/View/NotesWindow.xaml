<Window x:Class="EvernoteClone.View.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvernoteClone.View"
        xmlns:vm="clr-namespace:EvernoteClone.ViewModel"
        mc:Ignorable="d"
        Title="NotesWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="New Note_Book" 
                          Command="{Binding NewNotebookCommand}"/>
                <MenuItem Header="_New Note" 
                          Command="{Binding NewNoteCommand}"
                          CommandParameter="{Binding SelectedNotebook}"/>
                <MenuItem Header="_Save NoteBook" />
                <MenuItem Header="Save Note" />
                <Separator />
                <MenuItem Header="_Exit" 
                          Command="{Binding ExitCommand}"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="statusTextBlick" />
            </StatusBarItem>
        </StatusBar>
        <ListView DockPanel.Dock="Left"
                  x:Name="lstNotebooks"
                  Width="140"
                  ItemsSource="{Binding Notebooks}"
                  SelectedValue="{Binding SelectedNotebook, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView DockPanel.Dock="Left"
                  x:Name="lstNotes"
                  ItemsSource="{Binding Notes}"
                  SelectedValue="{Binding SelectedNote, Mode=TwoWay, UpdateSourceTrigger=SelectedNoteChanged}"
                  Width="140">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <ToggleButton Content="{Binding SpeechButtonText}"
                        x:Name="btnSpeech"
                        Command="{Binding SpeechCommand}"
                        />
                <ComboBox x:Name="cbxLanguage"
                          Width="100"
                          ItemsSource="{Binding Languages}"
                          SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                          />
                <ToggleButton Content="B"
                              x:Name="btnBold"
                              FontWeight="Bold"
                              Click="btnBold_Click"/>
                <ToggleButton Content="I"
                              x:Name="btnItalic"
                              FontStyle="Italic"
                              Click="btnItalic_Click"/>
                <ToggleButton x:Name="btnUnderlined"
                              Click="btnUnderlined_Click">
                    <TextBlock Text="U"
                               TextDecorations="Underline"/>
                </ToggleButton>
                <ComboBox x:Name="fontFamilyComboBox"
                          Width="100"
                          SelectionChanged="fontFamilyComboBox_SelectionChanged"/>
                <ComboBox x:Name="fontSizeComboBox"
                          Width="50"
                          IsEditable="True"
                          TextBoxBase.TextChanged="fontSizeComboBox_TextChanged"/>
                <Button Content="Save"
                        x:Name="saveFileButton"
                        Click="saveFileButton_Click"/>
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <RichTextBox x:Name="rtbNoteContent"
                         Margin="5"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         TextChanged="rtbNoteContent_TextChanged"
                         SelectionChanged="rtbNoteContent_SelectionChanged">
            </RichTextBox>
        </Grid>
        
    </DockPanel>
</Window>
